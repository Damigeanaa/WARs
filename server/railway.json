{
  "version": 1,
  "build": {
    "commands": [
      "npm install",
      "npm run build"
    ]
  },
  "start": {
    "command": "npm start"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "$PORT"
  },
  "healthcheck": {
    "path": "/health",
    "timeout": "10s",
    "interval": "30s",
    "retries": 3
  }
}
